{
	"name": "mttt-local-tracker",
	"version": "2.0.0",
	"description": "Multi-Task Time Tracker with local file persistence - Refactored and improved.",
	"main": "server.js",
	"type": "commonjs",
	"scripts": {
		"start": "node server.js",
		"dev": "NODE_ENV=development node server.js",
		"health": "curl -s http://localhost:13331/api/health | json_pp || curl -s http://localhost:13331/api/health",
		"backup": "mkdir -p backups && cp mtt-*.json backups/backup-$(date +%Y%m%d-%H%M%S)/ 2>/dev/null || true",
		"test": "node tests/test-complete-suite.js",
		"test:headless": "HEADLESS=true node tests/test-complete-suite.js"
	},
	"keywords": [
		"time-tracker",
		"productivity",
		"local-first",
		"timer"
	],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"puppeteer": "^24.27.0"
	}
}
